<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_50"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/titleForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_40"
        android:fontFamily="@font/google_sans_bold"
        android:text="@string/forget"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleForget"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="@font/google_sans_bold"
        android:text="@string/descForget"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/forgetEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/descForget"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/edittext_bg_square"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="@dimen/dp_8"
        android:hint="@string/email"
        android:paddingStart="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_12"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textCursorDrawable="@drawable/cursor_color" />

    <ProgressBar
        android:id="@+id/forgetProgress"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/forgetEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:max="100"
        android:progress="50"
        android:visibility="gone" />

    <Button
        android:id="@+id/forgetBtn"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgetProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_65"
        android:background="@drawable/button"
        android:text="@string/send_verification_now"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</RelativeLayout>

